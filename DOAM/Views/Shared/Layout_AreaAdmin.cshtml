<!DOCTYPE html>
<html>
<title>DOAM Admin Area </title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/css/bootstrap-grid.css" />
<link rel="stylesheet" href="~/css/bootstrap.min.css">
<style>
    .w3-sidebar a {
        font-family: "Roboto", sans-serif
    }

    body, h1, h2, h3, h4, h5, h6, .w3-wide {
        font-family: "Montserrat", sans-serif;
    }
</style>
<body class="w3-content" style="max-width:1200px">

    <!-- Sidebar/menu -->
    <nav class="w3-sidebar w3-bar-block w3-black w3-collapse w3-top" style="z-index:3;width:250px" id="mySidebar">
        <div class="w3-container w3-display-container w3-padding-64">
            <i onclick="w3_close()" class="fa fa-remove w3-hide-large w3-button w3-display-topright"></i>
            <h3 class="w3-wide"><b>DOAM</b></h3>
        </div>
        <div class="w3-padding-4 w3-large w3-text-grey" style="font-weight:bold">

            <a onclick="myAccFunc()" href="javascript:void(0)" class="w3-button w3-block w3-white w3-left-align" id="myBtn">
                Manage Assets <i class="fa fa-caret-down"></i>
            </a>
            <div id="demoAcc2" class="w3-bar-block w3-hide w3-padding-large w3-medium">
                <a href="#" class="w3-bar-item w3-button">@Html.ActionLink("Assets", "Index", "Assets") </a>
                <a href="#" class="w3-bar-item w3-button">@Html.ActionLink("AssetTypes", "Index", "AssetTypes")</a>
                <a href="#" class="w3-bar-item w3-button">@Html.ActionLink("AssetMetaDatas", "Index", "AssetMetaDatas")</a>
                <a href="#" class="w3-bar-item w3-button">@Html.ActionLink("AssetTags", "Index", "AssetTags")</a>
                <a href="#" class="w3-bar-item w3-button">@Html.ActionLink("AssetTypeSupportedMetaDatas", "Index", "AssetTypeSupportedMetaDatas")</a>
                <a href="#" class="w3-bar-item w3-button">@Html.ActionLink("MetaDatas", "Index", "MetaDatas")</a>
                <a href="#" class="w3-bar-item w3-button">@Html.ActionLink("MetaDataGroups", "Index", "MetaDataGroups")</a>
                <a href="#" class="w3-bar-item w3-button">@Html.ActionLink("MimeTypes", "Index", "MimeTypes")</a>
                <a href="#" class="w3-bar-item w3-button">@Html.ActionLink("Tags", "Index", "Tags")</a>
            </div>
        </div>

        <div class="w3-padding-1 w3-large w3-text-grey" style="font-weight:bold">

            <a onclick="myAccFunc1()" href="javascript:void(0)" class="w3-button w3-block w3-white w3-left-align" id="myBtn">
                Manage Users <i class="fa fa-caret-down"></i>
            </a>
            <div id="demoAcc" class="w3-bar-block w3-hide w3-padding-large w3-medium">
                <a href="#" class="w3-bar-item w3-button">@Html.ActionLink("Users", "Index", "AspNetUsers")</a>
                <a href="#" class="w3-bar-item w3-button">@Html.ActionLink("Roles", "Index", "AspNetRoles")</a>
                <a href="#" class="w3-bar-item w3-button">@Html.ActionLink("UserLogin", "Index", "AspNetUserLogins")</a>
                <a href="#" class="w3-bar-item w3-button">@Html.ActionLink("UserClaim", "Index", "AspNetUserClaims")</a>
            </div>
        </div>
    </nav>
    <!-- Top menu on small screens -->
    <header class="w3-bar w3-top w3-hide-large w3-black w3-xlarge">
        <div class="w3-bar-item w3-padding-24 w3-wide">DOAM</div>
        <a href="javascript:void(0)" class="w3-bar-item w3-button w3-padding-24 w3-right" onclick="w3_open()"><i class="fa fa-bars"></i></a>
    </header>

    <!-- Overlay effect when opening sidebar on small screens -->
    <div class="w3-overlay w3-hide-large" onclick="w3_close()" style="cursor: pointer" title="close side menu" id="myOverlay"></div>

    <!-- !PAGE CONTENT! -->
    <div  style="margin-left:250px" >

        <!-- Push down content on small screens -->
        <div class="w3-hide-large" style="margin-top:83px"></div>

        <!-- Top header -->
        <header class="w3-container  w3-xlarge">
            <p class="w3-left">DOAM Administration Areas</p>
            <p class="w3-right">
                @Html.ActionLink("Back Home", "Index", "Home", new { area = "" }, null)
            </p>
        </header>
       @* <div class="pre-scrollable" >*@
            @* <a href="javascript:void(0)" class="w3-bar-item w3-button w3-padding-24 w3-right" onclick="w3_open()"></a>*@
            @RenderBody()
      @*  *@  </div>


        <div class="w3-black w3-center w3-padding-24">You click here to =>  @Html.ActionLink("Back Home", "Index", "Home", new { area = "" }, null)  DOAM PROJET</div>

        <!-- End page content -->
    </div>

    <script>
        // Accordion
        function myAccFunc1() {
            var x = document.getElementById("demoAcc");
            if (x.className.indexOf("w3-show") == -1) {
                x.className += " w3-show";
            } else {
                x.className = x.className.replace(" w3-show", "");
            }
        }
        function myAccFunc() {
            var x = document.getElementById("demoAcc2");
            if (x.className.indexOf("w3-show") == -1) {
                x.className += " w3-show";
            } else {
                x.className = x.className.replace(" w3-show", "");
            }
        }

        // Click on the "Jeans" link on page load to open the accordion for demo purposes
        document.getElementById("myBtn").click();


        // Open and close sidebar
        function w3_open() {
            document.getElementById("mySidebar").style.display = "block";
            document.getElementById("myOverlay").style.display = "block";
        }

        function w3_close() {
            document.getElementById("mySidebar").style.display = "none";
            document.getElementById("myOverlay").style.display = "none";
        }
    </script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrap1")
    @RenderSection("scripts", required: false)

</body>
</html>

